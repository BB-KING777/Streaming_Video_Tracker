{
  "manifest_version": 3,
  "name": "Streaming Video Tracker",
  "version": "2.9",
  "description": "複数のストリーミングサービスで視聴した動画を追跡します",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.unext.jp/*",
        "*://*.netflix.com/*",
        "*://*.primevideo.com/*",
        "*://*.disneyplus.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["manage.html", "stats.html", "react.development.js", "react-dom.development.js", "recharts.min.js", "stats.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}